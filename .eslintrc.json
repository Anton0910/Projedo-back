{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "Airbnb",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
],

    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],

    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "ts": "never"
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "typescript" : {}
        }
    }
}
